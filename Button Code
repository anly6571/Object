/*

*/
//decalre variables 
int btnPin = 2;
int ledPin = 8;
int swtchPin = 4;
int led2Pin = 9;
void setup() {
    //declare inputs and outputs
    pinMode(btnPin, INPUT);
    pinMode(ledPin, OUTPUT);
    pinMode(swtchPin, INPUT);
    pinMode(led2Pin, OUTPUT);
    
    //initialize serial comm
    Serial.begin(9600);
}
void loop() {
  //put main code here, to run repeatedly 
  //Inputs=read, output=write
  Serial.println(digitalRead(btnPin)); 
  //if btn=1, turn light on, if btn=0, turn light off 
  if (digitalRead(btnPin)==1){
    digitalWrite(ledPin, HIGH);
  }else{
    digitalWrite(ledPin, LOW);
  }
  
  //if swtch=1, turn light on, if swich=0, turn light off 
  if (digitalRead(swtchPin)==1){
    digitalWrite(led2Pin, HIGH);
  }else{
    digitalWrite(ledPin, LOW);
  }
}
